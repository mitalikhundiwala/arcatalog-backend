generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email       String @unique
  userId      String @id
  displayName String
  picture     String
}

model Author {
  id    String @default(uuid()) @id
  name  String @unique
  books Book[] @relation(references: [id])
}

model Book {
  id     String   @default(uuid()) @id
  title  String
  author Author[] @relation(references: [id])
}